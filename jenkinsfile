pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                git 'https://github.com/matt-awad03/pipeline-demo.git'
                sh 'mvn clean install'
            }
        }
        stage('Test') {
            steps {
                sh 'cd openapi-demo'
                sh 'mvn test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
    post {
        success {
            jacoco(
                execPattern: '**/build/jacoco/*.exec',
                classPattern: '**/build/classes/java/main',
                sourcePattern: '**/src/main'
            )
        }
    }
}
